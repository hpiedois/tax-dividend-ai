# ============================================================================
# UAT ENVIRONMENT - Tax Dividend AI (User Acceptance Testing)
# ============================================================================
# Configuration pour les tests utilisateurs / staging
# ⚠️  Utiliser des mots de passe forts différents de la production
# ============================================================================

# ----------------------------------------------------------------------------
# PostgreSQL - UAT
# ----------------------------------------------------------------------------
POSTGRES_DB=taxdividend_uat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=uat_secure_password_change_me

# Application user credentials
TAXDIVIDEND_DB_USER=taxdividend_user
TAXDIVIDEND_DB_PASSWORD=uat_app_password_change_me

# Performance settings (UAT - closer to production)
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Port (different from dev to allow running both)
POSTGRES_PORT=5433

# ----------------------------------------------------------------------------
# MinIO - UAT
# ----------------------------------------------------------------------------
MINIO_ROOT_USER=uat_minio_admin
MINIO_ROOT_PASSWORD=uat_minio_secure_password_change_me
MINIO_API_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_BROWSER=on

# ----------------------------------------------------------------------------
# Redis - UAT
# ----------------------------------------------------------------------------
REDIS_PORT=6380

# ----------------------------------------------------------------------------
# Backend Specific
# ----------------------------------------------------------------------------
INTERNAL_API_KEY=uat_internal_key_change_me_min_32_chars

# ----------------------------------------------------------------------------
# Observability (OpenTelemetry)
# ----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317
OTEL_TRACES_SAMPLER_PROBABILITY=1.0
