# ============================================================================
# Tax Dividend AI Backend - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env files to version control!
# ============================================================================

# ========================================
# Spring Profile
# ========================================
# Use 'dev' for development with safe defaults, 'prod' for production
SPRING_PROFILES_ACTIVE=dev

# ========================================
# Database Configuration (REQUIRED)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taxdividend_dev
DB_USERNAME=taxdividend_user
DB_PASSWORD=your_secure_database_password_here

# ========================================
# MinIO / S3 Storage (REQUIRED)
# ========================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=tax-dividend-forms-dev
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key_min_32_chars

# ========================================
# Email Configuration (Optional)
# ========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTH=false
SMTP_STARTTLS=false
SMTP_FROM=noreply@taxdividend.com

# ========================================
# Actuator Security (REQUIRED)
# ========================================
ACTUATOR_USERNAME=admin
ACTUATOR_PASSWORD=your_secure_actuator_password_here

# ========================================
# Application Security (REQUIRED)
# ========================================
# Internal API key for service-to-service communication (minimum 32 characters)
INTERNAL_API_KEY=your_internal_api_key_minimum_32_characters_long_and_secure

# ========================================
# Keycloak Configuration (REQUIRED)
# ========================================
KEYCLOAK_SERVER_URL=http://localhost:8180
KEYCLOAK_REALM=tax-dividend
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password

KEYCLOAK_CLIENT_ID=backend-service

# ========================================
# OpenTelemetry Tracing (Optional)
# ========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_TRACES_SAMPLER_PROBABILITY=1.0

# ========================================
# Environment Metadata
# ========================================
ENVIRONMENT=development
PROJECT_VERSION=0.0.1-SNAPSHOT
HOSTNAME=localhost

# ========================================
# Security Notes
# ========================================
# 1. All passwords should be strong (min 16 chars, mixed case, numbers, symbols)
# 2. API keys should be cryptographically random (min 32 chars)
# 3. Change ALL default values before deploying to production
# 4. Use secret management systems (Vault, AWS Secrets Manager) in production
# 5. Never commit .env files to Git
