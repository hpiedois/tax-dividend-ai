import { useState } from 'react';
import { useTranslation } from 'react-i18next';
import { Shell } from './components/layout/Shell';
import { LoginScreen } from './components/auth/LoginScreen';
import { DashboardView } from './components/views/DashboardView';
import { HistoryView } from './components/views/HistoryView';
import { SettingsView } from './components/views/SettingsView';
import { DropZone } from './components/upload/DropZone';
import { ScanningOverlay } from './components/upload/ScanningOverlay';
import { parseDividendPDF, type DividendData } from './lib/mock-parser';
import { Button } from './components/ui/Button';
import { Card } from './components/ui/Card';
import { ArrowRight, CheckCircle, RefreshCcw, FileText, Wallet } from 'lucide-react';
import { motion } from 'framer-motion';

type ViewState = 'dashboard' | 'history' | 'settings' | 'scan';

function App() {
  const { t } = useTranslation();
  const [isLoggedIn, setIsLoggedIn] = useState(false);
  const [currentView, setCurrentView] = useState<ViewState>('dashboard');

  // Scan State
  const [scanStep, setScanStep] = useState<'upload' | 'scanning' | 'result'>('upload');
  const [scanResults, setScanResults] = useState<DividendData[]>([]);
  const [processingCount, setProcessingCount] = useState({ current: 0, total: 0 });

  const handleFilesSelect = async (files: File[]) => {
    setScanStep('scanning');
    setProcessingCount({ current: 0, total: files.length });
    const results: DividendData[] = [];

    for (let i = 0; i < files.length; i++) {
      setProcessingCount(prev => ({ ...prev, current: i + 1 }));
      try {
        const result = await parseDividendPDF(files[i]);
        results.push(result);
      } catch (error) {
        console.error("Error parsing", error);
      }
    }

    setScanResults(results);
    setScanStep('result');
  };

  const startNewScan = () => {
    setScanStep('upload');
    setScanResults([]);
    setCurrentView('scan');
  };

  const renderContent = () => {
    switch (currentView) {
      case 'dashboard':
        return <DashboardView onStartScan={startNewScan} />;
      case 'history':
        return <HistoryView />;
      case 'settings':
        return <SettingsView />;
      case 'scan': {
        // Calculate totals
        const totalGross = scanResults.reduce((acc, curr) => acc + curr.grossAmount, 0);
        const totalReclaimable = scanResults.reduce((acc, curr) => acc + curr.reclaimableAmount, 0);

        return (
          <div className="max-w-4xl mx-auto space-y-8">
            <section className="text-center space-y-4 py-8">
              <h1 className="text-4xl font-bold font-heading text-foreground leading-tight">
                {t('hero.title_start')} <span className="text-brand-600">{t('hero.title_highlight')}</span>
              </h1>
              <p className="text-muted-foreground text-lg">
                {t('hero.subtitle')}
              </p>
            </section>

            <div className="min-h-[400px]">
              {scanStep === 'upload' && (
                <motion.div initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }}>
                  <DropZone onFileSelect={handleFilesSelect} />
                </motion.div>
              )}

              {scanStep === 'scanning' && (
                <Card className="min-h-[400px]">
                  <ScanningOverlay
                    progress={processingCount.total > 1 ? `Analysis ${processingCount.current}/${processingCount.total}` : undefined}
                  />
                </Card>
              )}

              {scanStep === 'result' && scanResults.length > 0 && (
                <motion.div initial={{ opacity: 0, scale: 0.95 }} animate={{ opacity: 1, scale: 1 }} className="space-y-6">

                  {/* Summary Card */}
                  <Card className="bg-gradient-to-br from-slate-900 to-slate-800 text-white border-0 shadow-xl overflow-hidden relative">
                    <div className="absolute top-0 right-0 p-32 bg-brand-500/10 rounded-full blur-3xl -mr-16 -mt-16" />
                    <div className="relative z-10 flex flex-col md:flex-row justify-between items-center gap-6 p-2">
                      <div className="flex items-center gap-4">
                        <div className="p-3 bg-white/10 rounded-xl backdrop-blur-sm">
                          <Wallet className="w-8 h-8 text-brand-300" />
                        </div>
                        <div>
                          <p className="text-slate-400 font-medium text-sm uppercase tracking-wider mb-1">Total Récupérable</p>
                          <h2 className="text-4xl font-bold font-heading text-white">{totalReclaimable.toFixed(2)} EUR</h2>
                        </div>
                      </div>
                      <div className="flex gap-8 text-right">
                        <div>
                          <p className="text-slate-400 text-xs uppercase mb-1">Documents</p>
                          <p className="text-xl font-bold">{scanResults.length}</p>
                        </div>
                        <div>
                          <p className="text-slate-400 text-xs uppercase mb-1">Montant Brut</p>
                          <p className="text-xl font-bold text-slate-300">{totalGross.toFixed(2)} EUR</p>
                        </div>
                      </div>
                    </div>
                  </Card>

                  {/* Results List */}
                  <div className="grid gap-4">
                    {scanResults.map((data, index) => (
                      <motion.div
                        key={index}
                        initial={{ opacity: 0, y: 10 }}
                        animate={{ opacity: 1, y: 0 }}
                        transition={{ delay: index * 0.1 }}
                      >
                        <Card className="p-0 overflow-hidden hover:shadow-md transition-shadow duration-300">
                          <div className="p-6 flex flex-col md:flex-row justify-between items-center gap-4">
                            <div className="flex items-center gap-4 w-full md:w-auto">
                              <div className="bg-emerald-50 dark:bg-emerald-900/30 p-3 rounded-full shrink-0">
                                <CheckCircle className="text-emerald-500 w-5 h-5" />
                              </div>
                              <div>
                                <h3 className="font-heading font-bold text-foreground">{data.securityName}</h3>
                                <div className="flex items-center gap-3 text-sm text-slate-500">
                                  <span className="font-mono bg-muted px-2 py-0.5 rounded text-xs text-muted-foreground">{data.isin}</span>
                                  <span className="flex items-center gap-1"><FileText className="w-3 h-3" /> PDF</span>
                                </div>
                              </div>
                            </div>

                            <div className="flex items-center gap-8 w-full md:w-auto justify-between md:justify-end">
                              <div className="text-right">
                                <p className="text-xs text-slate-400 uppercase font-medium mb-1">Date</p>
                                <p className="font-medium text-muted-foreground">{data.paymentDate}</p>
                              </div>
                              <div className="text-right">
                                <p className="text-xs text-slate-400 uppercase font-medium mb-1">Brut</p>
                                <p className="font-medium text-foreground">{data.grossAmount} <span className="text-xs text-muted-foreground">{data.currency}</span></p>
                              </div>
                              <div className="text-right pl-4 border-l border-border">
                                <p className="text-xs text-emerald-600 uppercase font-bold mb-1">Remboursement</p>
                                <p className="font-bold text-emerald-600">+{data.reclaimableAmount}</p>
                              </div>
                            </div>
                          </div>
                        </Card>
                      </motion.div>
                    ))}
                  </div>

                  <div className="p-6 bg-muted/30 border-t border-border flex justify-end gap-3 rounded-xl">
                    <Button variant="ghost" onClick={startNewScan}>
                      <RefreshCcw className="w-4 h-4 mr-2" /> {t('result.new_scan')}
                    </Button>
                    <Button>
                      {t('result.generate_forms')} <ArrowRight className="w-4 h-4 ml-2" />
                    </Button>
                  </div>
                </motion.div>
              )}
            </div>
          </div>
        );
      }
    }
  };

  return (
    <Shell
      isLoggedIn={isLoggedIn}
      onLogout={() => setIsLoggedIn(false)}
      currentView={currentView}
      onViewChange={(view) => setCurrentView(view as ViewState)}
    >
      {!isLoggedIn ? (
        <LoginScreen onLogin={() => setIsLoggedIn(true)} />
      ) : (
        renderContent()
      )}
    </Shell>
  );
}

export default App;
