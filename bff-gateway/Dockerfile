FROM maven:3.9.9-eclipse-temurin-25-beta AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
COPY ../specs ./specs

RUN mvn clean package -DskipTests

FROM eclipse-temurin:25-jre
WORKDIR /app
COPY --from=build /app/target/bff-gateway-0.0.1-SNAPSHOT.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
