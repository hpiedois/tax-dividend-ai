# ============================================================================
# INFRASTRUCTURE - ENVIRONMENT VARIABLES
# ============================================================================
# Copier ce fichier vers .env et adapter les valeurs pour votre environnement
# Usage: cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# PostgreSQL Configuration
# ----------------------------------------------------------------------------
POSTGRES_DB=taxdividend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme

# Application user (created by migrations)
# Used by backend application
TAXDIVIDEND_DB_USER=taxdividend_user
TAXDIVIDEND_DB_PASSWORD=dev_password_123

# Performance tuning
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_EFFECTIVE_CACHE_SIZE=512MB
POSTGRES_MAX_CONNECTIONS=50

# Port mapping
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# MinIO Configuration (S3-compatible storage)
# ----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ----------------------------------------------------------------------------
# Redis Configuration (optional, for caching)
# ----------------------------------------------------------------------------
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ----------------------------------------------------------------------------
# Keycloak Configuration (Development)
# ----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8180

# ----------------------------------------------------------------------------
# Mailhog Configuration (Email Testing)
# ----------------------------------------------------------------------------
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# ----------------------------------------------------------------------------
# Backend Specific Configuration
# ----------------------------------------------------------------------------
# Secret key for internal communication (BFF -> Backend)
INTERNAL_API_KEY=changeme-internal-api-key-min-32-chars

# ----------------------------------------------------------------------------
# Observability Configuration (OpenTelemetry)
# ----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317
OTEL_TRACES_SAMPLER_PROBABILITY=1.0
